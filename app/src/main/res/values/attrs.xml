    <!-- ......... UITitleBar.java .......... -->
    <declare-styleable name="UITitleBar">
        <!-- 标题文字 -->
        <attr name="mainTitleText" format="string|reference" />
        <!-- 左侧按钮文字 -->
        <attr name="leftTitleText" format="string|reference" />
        <!-- 右侧按钮文字 -->
        <attr name="rightTitleText" format="string|reference" />
        <!-- 左侧按钮图标 -->
        <attr name="leftTitleDrawable" format="reference" />
        <!-- 右侧按钮图标 -->
        <attr name="rightTitleDrawable" format="reference" />
        <!-- 标题栏的样式 -->
        <attr name="titleBarStyle">
            <flag name="mainTitle" value="0x01"/>
            <flag name="leftTitle" value="0x02"/>
            <flag name="rightTitle" value="0x04"/>
