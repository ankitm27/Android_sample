<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/chart4</item>
        <item name="android:selectableItemBackgroundBorderless">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/chart3</item>
    </style>
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--&lt;!&ndash; App主题颜色（滑动阴影等）   your app's branding color (for the app bar) &ndash;&gt;-->
