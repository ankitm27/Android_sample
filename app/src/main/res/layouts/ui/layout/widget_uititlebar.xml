<?xml version="1.0" encoding="utf-8"?>

<!-- RootLayout = RelativeLayout:
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/color_toolbar"
-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/color_titlebar_bg">

    <TextView
        android:id="@+id/widget_uititlebar_leftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:drawableStart="@drawable/selector_btn_back"
        android:gravity="center"
        android:text="@string/all_btntxt_Back"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/widget_uititlebar_titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/widget_uititlebar_rightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/colorlist_txt_btn"
        android:textSize="16sp"
        android:visibility="gone"/>

</merge>